{
  "name": "udacity_fullstack_project2_storefront_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ENV=dev && nodemon ./src/app.ts",
    "build": "tsc",
    "db-init:dev": "db-migrate -e local db:create udacity_dev_db",
    "db-init:test": "db-migrate -e local db:create udacity_test_db",
    "up-migrations:dev": "db-migrate up -e dev",
    "down-migrations:dev": "db-migrate reset -e dev",
    "up-migrations:test": "db-migrate up -e test",
    "down-migrations:test": "db-migrate reset -e test",
    "prepare-test": "npm run up-migrations:test && ENV=test  npm run build",
    "test": "npm run prepare-test && ENV=test jasmine && npm run down-migrations:test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "express": "^4.19.2",
    "jasmine": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.0",
    "pg": "^8.11.5",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "jasmine-spec-reporter": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
